<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3057B9"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_home"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#2b64ba"
            android:gravity="center"
            android:text="MJ TALK"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingRight="220dp"
            android:text="알림"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:paddingRight="130dp"
                android:text="톡 알림"
                android:textSize="20sp"
                />

            <com.ebanx.swipebtn.SwipeButton
                android:id="@+id/swbtn1"
                android:layout_width="wrap_content"
                android:layout_height="40dp">


            </com.ebanx.swipebtn.SwipeButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:paddingRight="57dp"
                android:text="수업 5분전 알림"
                android:textSize="20sp" />

            <com.ebanx.swipebtn.SwipeButton
                android:id="@+id/swbtn2"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

            </com.ebanx.swipebtn.SwipeButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:paddingRight="50dp"
                android:text="수업 10분전 알림"
                android:textSize="20sp" />

            <com.ebanx.swipebtn.SwipeButton
                android:id="@+id/swbtn3"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

            </com.ebanx.swipebtn.SwipeButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:paddingRight="90dp"
                android:text="게시판 알림"
                android:textSize="20sp" />

            <com.ebanx.swipebtn.SwipeButton
                android:id="@+id/swbtn4"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

            </com.ebanx.swipebtn.SwipeButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:paddingRight="39dp"
                android:text="수강과목 공개상태"
                android:textSize="20sp" />

            <com.ebanx.swipebtn.SwipeButton
                android:id="@+id/swbtn5"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

            </com.ebanx.swipebtn.SwipeButton>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >

            <Button
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="157dp"
                android:text="비밀번호 설정"
                android:textSize="20dp"></Button>

            <Button
                android:clickable="true"
                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="195dp"
                android:text="로그아웃"
                android:textSize="20dp">

            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="#ffffff">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#3057B9">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>