<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@null"
        android:src="@drawable/mj_logo"
        android:layout_gravity="left"
        android:layout_marginBottom="16dp"
        android:layout_weight="3" />


    <LinearLayout
        android:paddingTop="70dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">


        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="180dp"
                    android:text="ID"
                    android:textSize="25dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageView
                    android:paddingRight="180dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/login_id" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/TextView_find_id"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:text="회원님의 ID는 "></TextView>

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/TextView_find_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#464648"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:text="id가 들어갈 자리!!"></TextView>

                <TextView
                    android:layout_toRightOf="@id/TextView_find_id"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="입니다."></TextView>
            </RelativeLayout>


            <Button

                android:layout_marginTop="16dp"
                android:id="@+id/Button_find_id_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="로그인"
                android:background="@drawable/btn_login_black"
                android:textColor="#ffffff" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>